<Page x:Class="Registeration___Login_Desktop_Application.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registeration___Login_Desktop_Application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Background="White">
        <Image Source="person.png" HorizontalAlignment="Left" Height="128" Margin="193,10,0,0" VerticalAlignment="Top" Width="175" />
        <Label x:Name="profile" Content="" FontSize="30" HorizontalAlignment="Left" Margin="300,42,0,0" VerticalAlignment="Top" Height="49" Width="355" Background="#FF8F8585"/>
        <Button x:Name="logout_button" Content="Logout" FontSize="20" RenderTransformOrigin="0.791,0.871" Margin="519,49,145,359" Background="#FF2976C6" Foreground="#FFFFE8E8" Click="logout_button_Click"/>

        <Rectangle HorizontalAlignment="Left" Height="325" Margin="82,125,0,0" Stroke="Black" VerticalAlignment="Top" Width="686"/>
        <DataGrid x:Name="profile_DG" AutoGenerateColumns="True" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="115,160,65,35"/>

    </Grid>
</Page>
